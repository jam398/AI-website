<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{% if title %}{{ title }} — {% endif %}{{ site.meta.siteTitle }}</title>
  <meta name="description" content="{{ site.meta.siteDescription }}">
  <link rel="stylesheet" href="{{ '/css/style.css' | url }}">
</head>
<body>

  {# ── Header / Navigation ── #}
  <header class="header">
    <div class="container">
      <a href="{{ '/' | url }}" class="logo">{{ site.meta.siteTitle }}</a>
      <button class="nav-toggle" aria-label="Toggle navigation">&#9776;</button>
      <ul class="nav-links">
        {% for item in site.nav.items %}
        <li>
          <a
            href="{{ item.url | url }}"
            {% if page.url == item.url %}class="active"{% endif %}
          >{{ item.label }}</a>
        </li>
        {% endfor %}
      </ul>
    </div>
  </header>

  {# ── Page content ── #}
  <main>
    {{ content | safe }}
  </main>

  {# ── Footer ── #}
  <footer class="footer">
    <div class="container">
      <p>{{ site.footer.text }}</p>
      <p>{{ site.footer.tagline }}</p>
    </div>
  </footer>

  {# ── Mobile nav toggle (tiny inline script) ── #}
  <script>
    document.querySelector('.nav-toggle').addEventListener('click', function () {
      document.querySelector('.nav-links').classList.toggle('open');
    });
  </script>
</body>
</html>
